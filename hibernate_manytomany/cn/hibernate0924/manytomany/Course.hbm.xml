<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
		
        <class name="cn.hibernate0924.manytomany.Course" >
        	
        	<id name="cid" column="cid" type="java.lang.Long">
        		<generator class="increment" />
        	</id>
        	
        	
        	<property name="cname" column="cname" type="string"/>
        	
        	<property name="description" column="description" type="string"/>
        	
        	<!-- 
        		table指的是多对多的第三张表
        	 -->
        	 <set name="students" table="student_course" cascade="save-update" inverse="true">
        	 	<key>
        	 		<!-- 
        	 			name在那个映射文件就填哪一个
        	 		 -->
        	 		<column name="cid"></column>
        	 	</key>
        	 	
        	 	<many-to-many class="cn.hibernate0924.manytomany.Student" column="sid"></many-to-many>
        	 </set> 
        </class>    

</hibernate-mapping>